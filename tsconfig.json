{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true, 
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "removeComments": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}